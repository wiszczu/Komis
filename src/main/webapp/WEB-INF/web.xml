<!DOCTYPE web-app PUBLIC
 "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
 "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>
  <display-name>Archetype Created Web Application</display-name>

  <context-param>
    <param-name>dataSource</param-name>
    <param-value>jdbc:komis</param-value>
  </context-param>


  <listener>
    <listener-class>pl.altkom.web.tomek.SessionCounter</listener-class>
  </listener>


  <servlet>
    <servlet-name>hello</servlet-name>
    <servlet-class>pl.altkom.web.tomek.ControllerServlet</servlet-class>
  </servlet>

  <servlet>
    <servlet-name>success</servlet-name>
    <servlet-class>pl.altkom.web.tomek.SuccessfullSaveServlet</servlet-class>
  </servlet>

  <servlet>
    <servlet-name>save-user-data</servlet-name>
    <servlet-class>pl.altkom.web.tomek.SaveClientDataServlet</servlet-class>
  </servlet>

  <servlet>
    <servlet-name>save-car-data</servlet-name>
    <servlet-class>pl.altkom.web.tomek.SaveCarDataServlet</servlet-class>
  </servlet>

  <servlet>
    <servlet-name>redirect</servlet-name>
    <servlet-class>pl.altkom.web.tomek.RedirectServlet</servlet-class>
  </servlet>

  <servlet>
    <servlet-name>users</servlet-name>
    <servlet-class>pl.altkom.web.tomek.GetUserTableServlet</servlet-class>
  </servlet>

  <servlet>
    <servlet-name>cars</servlet-name>
    <servlet-class>pl.altkom.web.tomek.GetCarTableServlet</servlet-class>
  </servlet>


  <servlet-mapping>
    <servlet-name>users</servlet-name>
    <url-pattern>/users</url-pattern>
  </servlet-mapping>

  <servlet-mapping>
    <servlet-name>cars</servlet-name>
    <url-pattern>/cars</url-pattern>
  </servlet-mapping>

  <servlet-mapping>
    <servlet-name>hello</servlet-name>
    <url-pattern>/hello</url-pattern>
  </servlet-mapping>

  <servlet-mapping>
    <servlet-name>success</servlet-name>
    <url-pattern>/successful-save</url-pattern>
  </servlet-mapping>

  <servlet-mapping>
    <servlet-name>save-user-data</servlet-name>
    <url-pattern>/save-user-data</url-pattern>
  </servlet-mapping>

  <servlet-mapping>
    <servlet-name>save-car-data</servlet-name>
    <url-pattern>/save-car-data</url-pattern>
  </servlet-mapping>

  <servlet-mapping>
    <servlet-name>redirect</servlet-name>
    <url-pattern>/redirect</url-pattern>
  </servlet-mapping>


  <session-config>
    <session-timeout>20</session-timeout>
  </session-config>


  <welcome-file-list>
    <welcome-file>hello</welcome-file>
  </welcome-file-list>


  <resource-ref>
    <description>DB Connection</description>
    <res-ref-name>jdbc:komis</res-ref-name>
    <res-type>javax.sql.DataSource</res-type>
    <res-auth>Container</res-auth>
  </resource-ref>

</web-app>
